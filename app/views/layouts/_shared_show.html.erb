 <% obj.each  do |recipe| %>
<div class = "row">
  <div class= "col-md-2">
      <section class="chef-intro center">
        <%= link_to gravator_for(recipe.chef,size: 120), recipes_path %>
      </section>
  </div>
  <div class= "col-md-8 well">
     <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
       <p>
         <%= truncate(recipe.description, length: 150) %>
       </p>
      <% if recipe.ingredients.any? %>
        <p>Ingredients: <%= render recipe.ingredients %></p>
      <% end %>
       <p>
       <span class="quiet">Created  <small><%= time_ago_in_words(recipe.created_at) %> ago by 
        <%= recipe.chef.chefname.capitalize %></small></span>
       </p>
       <div class="recipe-actions">
  <% if logged_in? %>
  <% if current_chef == recipe.chef || current_chef.admin? %>
    <%= link_to "Edit this recipe", edit_recipe_path(recipe), 
                              class: "btn btn-xs btn-warning" %>
    <%= link_to "Delete this recipe", recipe_path(recipe), 
                        method: :delete,
      data: { confirm: "Are you sure you want to delete this recipe?" },
                                      class: "btn btn-xs btn-danger" %>
  <% end %>  
  <% end %>                                 
  </div>
  </div>

</div>
<br/>
 <% end %>
